<div class="container">
  <table class="table table-striped table-hover">
    <tr>
      <th><h4>Recipe Name</h4></th>
      <th><h4>Link</h4></th>
      <th><h4>Ingredients</h4></th>
      <th><h4>Picture</h4></th>
    </tr>
    <% @recipes["results"].each do |recipe| %>
      <tr>
        <td><%= recipe["title"] %></td>
        <td><%= link_to("Recipe Link", recipe["href"]) %></td>
        <td><%= recipe["ingredients"] %></td>
        <td><%= image_tag(recipe["thumbnail"]) %></td>
      </tr>
    <% end %>
  </table>
  <%= link_to "Back To Search", recipe_search_path, class: "btn btn-primary" %>
</div>
